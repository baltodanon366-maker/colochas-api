# Base de datos PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/colochas_db?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Application
PORT=3000
NODE_ENV=development

# CORS
CORS_ORIGIN="http://localhost:3000"

# Ngrok (opcional - para desarrollo con túnel público)
# Cuando NGROK_URL está configurado, CORS permite cualquier origen
NGROK_URL="https://your-tunnel.ngrok.io"

# Bcrypt
BCRYPT_ROUNDS=10

